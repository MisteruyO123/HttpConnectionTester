<Window x:Class="HttpConnectionTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Http Connection TEST" Height="308" Width="525" ResizeMode="NoResize">
    <Grid Height="259">
        <Button Content="START" Height="60" HorizontalAlignment="Left" Margin="29,104,0,0" Name="btnStart" VerticalAlignment="Top" Width="449" Click="btnStart_Click" />
        <ProgressBar Height="61" HorizontalAlignment="Left" Margin="29,25,0,0" Name="pbTest" VerticalAlignment="Top" Width="449" />
        <TextBlock Text="{Binding ElementName=pbTest, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="243,47,243,197" />
        <TextBlock Height="48" HorizontalAlignment="Left" Margin="8,199,0,0" Name="tbURL" VerticalAlignment="Top" Width="483" TextWrapping="Wrap" />
    </Grid>
</Window>
